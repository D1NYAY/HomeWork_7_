<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="base.Buttom" parent="Widget.MaterialComponents.Button">
<item name="android:layout_width">80dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">200dp</item>
        <item name="android:textSize">32dp</item>
        <item name="android:layout_height">80dp</item>
    </style>
<style name="Gray.Buttom" parent="base.Buttom">
<item name="android:textColor">@color/black</item>
    <item name="backgroundTint">@color/gray</item>
</style >
    <style name="Orange.Buttom" parent="base.Buttom">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/yellow</item>
    </style>
    <style name="DarkGray.Buttom" parent="base.Buttom">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/darkGray</item>
    </style>

</resources>